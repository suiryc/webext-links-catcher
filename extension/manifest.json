{
  "manifest_version": 2,
  "name": "WebExtension native messaging",
  "version": "0.1",

  "description": "Interacts with native application.",

  "permissions": [
    "nativeMessaging",
    "tabs"
  ],

  "icons": {
    "48": "src/icon.svg",
    "96": "src/icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "native-messaging@suiryc"
    }
  },

  "content_scripts": [{
    "matches": [
      "file:///*.html",
      "file:///*.htm"
    ],
    "run_at": "document_start",
    "js": [
      "src/util.js",
      "src/constants.js",
      "src/messaging.js",
      "src/content-script.js"
    ],
    "css": [
      "style/webext.css"
    ]
  }],

  "background": {
    "scripts": [
      "src/util.js",
      "src/constants.js",
      "src/messaging.js",
      "src/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "src/icon.svg"
  }
}
