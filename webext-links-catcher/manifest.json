{
  "manifest_version": 2,
  "name": "Links Catcher",
  "version": "0.2",

  "description": "Catches links in selected zone.",

  "permissions": [
    "clipboardWrite"
  ],

  "icons": {
    "48": "src/icon.svg",
    "96": "src/icon.svg"
  },

  // Our id
  "applications": {
    "gecko": {
      "id": "{5c262b0f-d680-42dd-82ca-40a75c4384a2}"
    }
  },

  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "run_at": "document_start",
    "js": [
      "src/util.js",
      "src/links-catcher.js",
      "src/content-script.js"
     ],
    "css": [ "src/content-script.css" ]
  }]
}
