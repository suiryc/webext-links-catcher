{
  "manifest_version": 2,
  "name": "Tab successor",
  "version": "0.2",

  "description": "Manages tab successor to activate the right tab when active one is closed.",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "65.0"
    }
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "icons": {
    "48": "src/icon.svg",
    "96": "src/icon.svg"
  },

  "background": {
    "scripts": [
      "src/settings.js",
      "src/settings-ext.js",
      "src/background.js"
    ]
  },

  "options_ui": {
    "page": "src/options.html",
    "browser_style": true
  }
}
